@font-face {
  font-family: 'Commercial Script';
  src: url("<%= asset_path 'commercial_script.ttf' %>");
}

@font-face {
  font-family: 'Archive';
  src: url("<%= asset_path 'Archive.otf' %> ");
}

@font-face {
  font-family: 'Deming';
  src: url("<%= asset_path 'Deming_EP.ttf' %> ");
}

 .clearfix:after{
   clear: both;
   content: ".";
   display: block;
   height: 0;
   visibility: hidden;
   font-size: 0;
 }
 
 .clear {
   clear: both;
 }

 body {
   background-color: white;
   color: black;
   font-family: Helvetica, Arial, sans-serif;
   font-size: 18px;
   line-height: 24px;
 }

 #container {
   width: 1308px;
   margin: 110px auto 0;
 }
 
 nav {
   margin: 20px 2px;
 }
 
 nav a {
   color: black;
   text-decoration: none;
   font-weight: bolder;
   letter-spacing: 2px;
   text-transform: uppercase;
   display: block;
   float: left;
   margin: 15px;
   padding: 2px;
 }
 
 nav a:hover {
   border-bottom: 1px dotted black;
 }

 .three-column {
   margin: 2px;
   width: 400px;
   height: 400px;
   float: left;
   position: relative;
   padding: 15px;
   border: 1px solid #eee;
 }
 
 .three-column:hover {
   box-shadow: 3px 3px 5px #999;
 }

 .three-column img {
   width: 400px;
   height: 400px;
 }

 .overlay {
   position: absolute;
   top: 135px;
   display: block;
   text-align: center;
   width: 320px;
   padding: 40px;
   height: 53px;
   background: rgba(255, 255, 255, .9);
   font-size: 36px;
 }

 #starches .overlay {
   font-family: 'Archive';
   font-size: 48px;
   line-height: 70px;
   text-transform: uppercase;
 }

 #vegetables .overlay {
   font-family: 'Commercial Script';
   font-weight: bold;
   font-size: 60px;
   line-height: 70px;
   text-transform: capitalize;
 }

 #flair .overlay {
   font-family: 'Deming';
   font-size: 40px;
   line-height: 70px;
   text-transform: uppercase;
 }
