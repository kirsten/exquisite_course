@font-face {
  font-family: 'Commercial Script';
  src: url("<%= asset_path 'commercial_script.ttf' %>");
}

@font-face {
  font-family: 'Archive';
  src: url("<%= asset_path 'Archive.otf' %> ");
}

@font-face {
  font-family: 'Deming';
  src: url("<%= asset_path 'Deming_EP.ttf' %> ");
}

 .clearfix:after{
   clear: both;
   content: ".";
   display: block;
   height: 0;
   visibility: hidden;
   font-size: 0;
 }
 
 .clear {
   clear: both;
 }

 body {
   background: url('vintage_speckles.png') white repeat;
   color: black;
   font-family: Helvetica, Arial, sans-serif;
   font-size: 18px;
   line-height: 1;
 }

 #container {
   width: 1308px;
   margin: 30px auto 0;
 }
 
 nav {
   margin: 20px 2px;
 }
 
 nav a {
   color: black;
   text-decoration: none;
   font-weight: bolder;
   letter-spacing: 2px;
   text-transform: uppercase;
   display: block;
   float: left;
   margin: 15px;
   padding: 2px;
 }
 
 nav a:hover {
   border-bottom: 1px dotted black;
 }

 .controls {
   width: 100%;
   margin-top: 20px;
   text-align: center;
 }

 #spin-again,
 #spin-again:hover,
 #spin-again:visited,
 #spin-again:active {
   color: black;
   text-decoration: none;
 }

 #spin-again:hover {
   text-shadow: 1px 0px 2px #444;
 }

 #tagline {
   display: block;
   font-family: 'Commercial Script';
   font-size: 40px;
   line-height: 48px;
   margin-bottom: 20px;
 }

 #go,
 #go:hover,
 #go:visited,
 #go:active {
   display: block;
   color: black;
   background: white;
   text-decoration: none;
   font-family: 'Archive';
   font-size: 40px;
   line-height: 60px;
   text-transform: uppercase;
   width: 140px;
   height: 60px;
   border: 2px solid black;
   margin: 0 auto;
 }

 .three-column {
   margin: 2px;
   width: 400px;
   height: 400px;
   float: left;
   position: relative;
   padding: 15px;
   border: 1px solid #eee;
   background: white;
 }
 
 .three-column:hover {
   box-shadow: 3px 3px 5px #999;
 }

 .three-column img {
   width: 400px;
   height: 400px;
 }

 .overlay {
   position: absolute;
   top: 135px;
   display: block;
   width: 360px;
   padding: 20px;
   height: 100px;
   background: rgba(255, 255, 255, .9);
 }

 .name {
   position: relative;
   width: 360px;
   height: 100px;
 }

#starch,
#vegetable,
#flair {
   text-align: center;
   display: block;
}

#starch {
   font-family: 'Archive';
   font-size: 48px;
   line-height: 1;
   text-transform: uppercase;
 }

#vegetable {
   font-family: 'Commercial Script';
   font-weight: bold;
   font-size: 60px;
   line-height: 1;
   text-transform: capitalize;
 }

#flair {
   font-family: 'Deming';
   font-size: 40px;
   line-height: 1;
   text-transform: uppercase;
   margin-top: 10px;
 }

 .pinned,
 .pinned:hover {
   border: 1px solid #888;
   -moz-box-shadow:    inset 0 0 12px #666;
   -webkit-box-shadow: inset 0 0 12px #666;
   box-shadow:         inset 0 0 12px #666;
 }


