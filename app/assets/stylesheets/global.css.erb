@font-face {
  font-family: 'Commercial Script';
  src: url("<%= asset_path 'commercial_script.ttf' %>");
}

@font-face {
  font-family: 'Archive';
  src: url("<%= asset_path 'Archive.otf' %> ");
}

@font-face {
  font-family: 'Deming';
  src: url("<%= asset_path 'Deming_EP.ttf' %> ");
}

* {
  margin: 0;
  list-style-type: none;
}

.clearfix:after{
  clear: both;
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
  font-size: 0;
}
 
 .clear {
  clear: both;
 }

 body {
  background: url('vintage_speckles.png') white repeat;
  color: black;
  font-family: Helvetica, Arial, sans-serif;
  font-size: 18px;
  line-height: 1;
 }

#container {
  width: 1308px;
  margin: 0 auto;
}

#ec-home {
  margin-top: 133px;
}
 
header {
  width: 400px;
  margin: 0 2px 60px 2px;
  padding: 5px 15px 10px;
  background: white;
}
 
    header h1 {
      width: 200px;
      float: left;
      color: black;
      text-decoration: none;
      font-weight: bolder;
      display: block;
      line-height: .7;
    }

    header a,
    header a:hover,
    header a:visited,
    header a:active {
      text-decoration: none;
      color: black;
      display: block;
      width: 100%;
    }

.archive {
  font-family: 'Archive';
  font-size: 16px;
}

.commercial {
  font-family: 'Commercial Script';
  font-size: 32px;
}

.deming {
  font-family: 'Deming';
  font-size: 24px;
}

nav {
  float: right;
  position: relative;
  top: 42px;
}

nav li {
  float: left;
  margin: 2px 4px;
}

.controls {
  width: 100%;
  margin-top: 20px;
  text-align: center;
}

#spin-again,
#spin-again:hover,
#spin-again:visited,
#spin-again:active {
  padding: 20px;
  color: black;
  text-decoration: none;
  display: inline-block;
  background-image: url('dust.png');
  background: -webkit-radial-gradient(top center, circle, rgba(255, 255, 255, .3), rgba(139, 146, 152, .3));
  border-radius: 50%;
  box-shadow: 0px 1px 1px #999;
}

#spin-again:hover {
  box-shadow: 0px 2px 2px #999;
}

#tagline {
  display: block;
  font-family: 'Commercial Script';
  font-size: 40px;
  line-height: 48px;
  margin-bottom: 20px;
}

#go,
#go:hover,
#go:visited,
#go:active {
  display: block;
  color: black;
  background: white;
  text-decoration: none;
  font-family: 'Archive';
  font-size: 40px;
  line-height: 60px;
  text-transform: uppercase;
  width: 140px;
  height: 60px;
  border: 2px solid black;
  margin: 0 auto;
}

.ingredient {
  position: relative;
  width: 100%;
  padding: 3%;
  background: white;
  border: 1px solid #eee;
}

.ingredient img {
  width: 100%;
  height: 100%;
}
 
.ingredient:hover {
  box-shadow: 3px 3px 5px #999;
}

.overlay {
  display: block;
  position: absolute;
  top: 33%;
  width: 96%;
  height: 30%;
  background: rgba(255, 255, 255, .9);
}

.name {
  position: relative;
  width: 100%;
  height: 100%;
}

#starch,
#vegetable,
#flair {
  text-align: center;
  display: block;
  height: 100%;
  width: 100%;
  padding-top: 8%;
  padding-bottom: 8%;
}

#starch {
  font-family: 'Archive';
  font-size: 48px;
  line-height: 1;
  text-transform: uppercase;
}

#vegetable {
  font-family: 'Commercial Script';
  font-weight: bold;
  font-size: 60px;
  line-height: 1;
  text-transform: capitalize;
}

#flair {
  font-family: 'Deming';
  font-size: 40px;
  line-height: 1;
  text-transform: uppercase;
  margin-top: 10px;
}

.pinned,
.pinned:hover {
  border: 1px solid #888;
  -moz-box-shadow:    inset 0 0 12px #666;
  -webkit-box-shadow: inset 0 0 12px #666;
  box-shadow:         inset 0 0 12px #666;
}


