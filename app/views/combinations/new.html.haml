.row
  .one-third.column
    .ingredient
      = image_tag(@starch.photo)
      .overlay
        .name
          #starch
            = @starch.name
      %i.icon-chevron-up.icon-4x.up-arrow
      %i.icon-chevron-down.icon-4x.down-arrow


  .one-third.column
    .ingredient
      = image_tag(@veggie.photo)
      %i.icon-chevron-up.icon-4x.up-arrow
      %i.icon-chevron-down.icon-4x.down-arrow
      .overlay
        .name
          #vegetable
            = @veggie.name

  .one-third.column
    .ingredient
      = image_tag(@flair.photo)
      %i.icon-chevron-up.icon-4x.up-arrow
      %i.icon-chevron-down.icon-4x.down-arrow
      .overlay
        .name
          #flair
            = @flair.name

.row
  .one.column.offset-by-fifteen
    %a#spin-again{:href => "/combinations/new"}
      %i.icon-random.icon-2x
